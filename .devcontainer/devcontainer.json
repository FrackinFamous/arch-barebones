{
    "name": "Arch Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "features": {
        "ghcr.io/devcontainers/features/sshd:1": {}
    },
    "postCreateCommand": "pacman -Syu --noconfirm && pacman -S --noconfirm base-devel git",
    "remoteUser": "frack"
}
