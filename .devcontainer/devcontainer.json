{
    "name": "Arch Dev Container",
    "build": { "dockerfile": "Dockerfile" },
    "features": {
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        }
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "sudo pacman -Syu --noconfirm && sudo pacman -S --noconfirm base-devel git",
    "remoteUser": "frack"
}
